using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class AutoCanvasResolution : MonoBehaviour
{
    private float scaleX;
    private float scaleY;

    public bool attTela = false; // Atualizar sempre a tela no update (true) | Apenas ajustar posicoes, uma unica vez (false)
    
    void Start(){
        scaleX = transform.localScale.x;
        scaleY = transform.localScale.y;

        transform.localScale = new Vector3((scaleX * Screen.width / 1024), (scaleY * Screen.height / 768), transform.localScale.z);
    }

    void Update(){
        if (attTela == true) {
            transform.localScale = new Vector3((scaleX * Screen.width / 1024), (scaleY * Screen.height / 768), transform.localScale.z);
        }
    }
}
